{
  "swagger": "2.0",
  "info": {
    "description": "An API that takes the url of a website and takes screenshots of the homepage",
    "version": "1.0.0",
    "title": "Website Grabber",
    "contact": {
      "email": "mogbeyidavid@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "paths": {
    "/screenshots": {
      "post": {
        "tags": [
          "Screenshots"
        ],
        "summary": "Send the url of a website",
        "operationId": "snap-website",
        "description": "Takes the url of a website and snaps the home page",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "New URL",
            "description": "Url of a website to be snapped",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Screenshot"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/screenshots/{identifier}": {
      "get": {
        "tags": [
          "Screenshots"
        ],
        "summary": "Send the identifier to get the screenshot",
        "operationId": "get-link-to-snapshots",
        "description": "Take the identifier and get the link to the snapshot",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "identifier",
            "description": "Identifier of the screenshot",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "Screenshot": {
      "type": "object",
      "required": [
        "url"
      ],
      "properties": {
        "url": {
          "type": "string",
          "uniqueItems": true
        }
      }
    }
  },
  "schemes": [
    "http"
  ],
  "basePath": "/",
  "host": "127.0.0.1:3000"
}
